<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background2"
    tools:context=".DashboardActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="69dp"
            android:layout_height="46dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="73dp"
            android:layout_marginBottom="612dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Hey"
            android:textColor="#F7F3F3"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/display_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/display_name"
            android:layout_width="275dp"
            android:layout_height="46dp"
            android:layout_marginTop="73dp"
            android:layout_marginBottom="612dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Kshitij !"
            android:textColor="#F7F3F3"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/curr_month"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="373dp"
            android:layout_height="145dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="71dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="396dp"
            android:background="@drawable/dashboard_buttons"
            android:fontFamily="@font/rene_bieder_millard_medium"
            android:text="January"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.371"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <Button
            android:id="@+id/sign_out"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="276dp"
            android:layout_marginTop="321dp"
            android:layout_marginEnd="47dp"
            android:layout_marginBottom="41dp"
            android:background="@drawable/dashboard_buttons"
            android:fontFamily="@font/rene_bieder_millard_medium"
            android:text="Sign-Out"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/curr_month" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>